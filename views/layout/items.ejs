<article
  class="mt-2 p-3 w-[110vh] rounded-md flex flex-col items-center h-full bg-red-200"
>
  <% posts.forEach((row, index) => { %>
  <div class="bg-white w-[90vh] p-3 border rounded-md my-2 shadow-md">
    <h2 class="text-2xl pb-1 font-bold font-merriweather"><%= row.title %></h2>
    <p class="text-gray-500 text-sm font-kantumruy">
      By <%= row.author.name %> | <%= new Intl.DateTimeFormat('en-US', {
      weekday: 'long', day: '2-digit', month: 'long', year: 'numeric', hour:
      '2-digit', minute: '2-digit', }).format(new Date(row.date)) %>
    </p>
    <hr class="my-2" />
    <p class="font-merriweather"><%= row.summary %></p>
    <div class="flex justify-evenly mt-3">
      <a
        class="font-medium font-kantumruy text-red-600 hover:underline"
        href="/delete/<%= row._id %>"
        >Delete Post</a
      >
      <a
        class="font-medium text-blue-600 hover:underline"
        href="/edit/<%= row._id %>"
        >Edit Post</a
      >
      <a class="font-medium hover:underline" href="/detail/<%= row._id %>"
        >View Post</a
      >
    </div>
  </div>
  <% }) %>
</article>
